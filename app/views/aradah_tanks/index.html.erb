        <td><%= aradah_tank.thraween_plant5_tank %></td>
        <td><%= aradah_tank.bani_adwan_tank %></td>
        <td><%= aradah_tank.mashoqa_tank %></td>
        <td><%= aradah_tank.bedah_tank %></td>
        <td><%= aradah_tank.al_musa_tank %></td>
        <td><%= aradah_tank.marawah_tank %></td>
        <td><%= aradah_tank.qaran_dabi_tank %></td>
        <td><%= aradah_tank.alhalah_tank %></td>
        <td><%= aradah_tank.balqazmar_tank %></td>
        <td><%= aradah_tank.bani_hasan_tank %></td>
        <td><%= aradah_tank.alqalab_tank %></td>
        <td><%= aradah_tank.daws_tank %></td>
        <td><%= aradah_tank.sayhan_tank %></td>
        <td><%= aradah_tank.alkahelah_tank %></td>
        <td><%= aradah_tank.balhakam_tank %></td>
        <td><%= aradah_tank.aljwfaa_tank %></td>
        <td><%= link_to 'Show', aradah_tank %></td>
        <td><%= link_to 'Edit', edit_aradah_tank_path(aradah_tank) %></td>
        <td><%= link_to 'Delete', aradah_tank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

