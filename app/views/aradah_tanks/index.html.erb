  </thead>

  <tbody>
    <% @aradah_tanks.each do |aradah_tank| %>
      <tr>
        <td class="bg-light"><%= aradah_tank.created_at %></td>
        <td><%= aradah_tank.date %></td>
        <td><%= aradah_tank.user_id %></td>
        <td><%= aradah_tank.aradah_plant_tank %></td>
        <td><%= aradah_tank.naqal_plant1_tnak %></td>
        <td><%= aradah_tank.mashoqah_plant2_tank %></td>
