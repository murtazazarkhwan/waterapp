<p id="notice"><%= notice %></p>


<% if current_user.admin? %>
  <% content_for :header do %>
  <section class="hero is-warning is-small">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Projects
        </h1>
      </div>
    </div>
  </section>
  <% end %>

  <table class="table is-striped">
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Cntractor</th>
        <th>Project number</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= link_to 'الجنابين', aljnabens_path %></td>
          <td>شركة الرويتع</td>
          <td>1</td>
        </tr>
        <tr>
          <td><%= link_to 'تهامة الشامل', tohamhalshamels_path %></td>
          <td>شركة البكري</td>
          <td>2</td>
        </tr>
        <tr>
          <td><%= link_to 'الأشياب والسقيا', alashiab_alsoqia_path %></td>
          <td>شركة إيلاف</td>
          <td>3</td>
        </tr>
        <tr>
          <td><%= link_to 'عردة', aradahs_path %></td>
          <td>شركة سايسب</td>
          <td>4</td>
        </tr>
        <tr>
          <td><%= link_to 'المشاريع المصغرة', smallprojects_path %></td>
          <td>مؤسسة الوجناء</td>
          <td>5</td>
        </tr>
    </tbody>
  </table>
<% elsif current_user.project == 1 || 2 || 3 || 4 || 5%>
  <% target_project = Project.projects_map[current_user.project] %>
  <table class="table is-striped">
    <thead>
      <tr>
        <th>Company Name</th>
        <th>Cntractor</th>
        <th>Project number</th>
      </tr>
    </thead>
    <tbody>
        <% if current_user.project == 1 %>
        <tr>
          <td><%= link_to target_project[:company_name], new_aljnaben_path %></td>
          <td><%= target_project[:name] %></td>
          <td><%= target_project[:number] %></td>
        </tr>
        <% elsif current_user.project == 2 %>
        <tr>
          <td><%= link_to target_project[:company_name], new_tohamhalshamel_path %></td>
          <td><%= target_project[:name] %></td>
          <td><%= target_project[:number] %></td>
        </tr>
        <% elsif current_user.project == 3 %>
        <tr>
          <td><%= link_to target_project[:company_name], new_alashiab_alsoqium_path %></td>
          <td><%= target_project[:name] %></td>
          <td><%= target_project[:number] %></td>
        </tr>
        <% elsif current_user.project == 4 %>
        <tr>
          <td><%= link_to target_project[:company_name], new_aradah_path %></td>
          <td><%= target_project[:name] %></td>
          <td><%= target_project[:number] %></td>
        </tr>
        <% else current_user.project == 5 %>
        <tr>
          <td><%= link_to target_project[:company_name], new_smallproject_path %></td>
          <td><%= target_project[:name] %></td>
          <td><%= target_project[:number] %></td>
        </tr>
        <% end %>
        
    </tbody>
  </table>
<% else %>
  <h1> Please contact with Admin to assign a project </h1>
<% end %>