<% if current_user.admin? || current_user.project==7 %>
  <%= form_with(model: yab, local: true, html: { 'x-data': '{ a: 0, b: 0, c: 0, d: 0}' }) do |form| %>
    <% if yab.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(yab.errors.count, "error") %> prohibited this yabs from being saved:</h2>

        <ul>
          <% yab.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="title is-5 text-align-center">مشروع بطاط ويبس</div>

  <table class="table is-striped is-bordered", style="width:50%;margin-left:auto;margin-right:auto;">
    <thead>
    <tr>
      <th style="text-align:center">الكمية</th>
      <th style="text-align:center">البند</th>
      <th>#</th>
    </tr>
    </thead>

    <tbody>

    <tr>
          <td><%= form.text_field :yabs_produce, class: 'input  is-small bg-none', 'x-on:input': 'a = parseFloat($event.target.value)' %></td>
          <td style="text-align:center">إنتاج يبس</td>
          <td>1</td>
    </tr>

    <tr>
          <td><%= form.text_field :yabs_distribution, class: 'input  is-small bg-none', 'x-on:input': 'b = parseFloat($event.target.value)' %></td>
          <td style="text-align:center">توزيع يبس</td>
          <td>2</td>
    </tr>

    <tr>
          <td><%= form.text_field :batat_distribution, class: 'input  is-small bg-none', 'x-on:input': 'c = parseFloat($event.target.value)' %></td>
          <td style="text-align:center">توزيع بطاط</td>
          <td>3</td>
    </tr>

    <tr>
          <td><%= form.text_field :yabs_tank, class: 'input  is-small bg-none', 'x-on:input': 'd = parseFloat($event.target.value)' %></td>
          <td style="text-align:center">منسوب يبس</td>
          <td>4</td>
    </tr>

    <tr>
          <td><%= form.date_field :date, class: 'input  is-small bg-none is-center' %></td>
          <td style="text-align:center">التاريخ</td>
          <td>#</td>
    </tr>

    </tbody>
  </table>
  <div class="is-grouped">
            <div class="control has-text-centered">
              <%= form.button :submit, class: 'button is-info' %>
              <%= link_to 'Cancel', new_yab_path, class:'button is-light' %>
            </div>
  </div>
  <% end %>
<%else%>
<h1><%= "Please contact the admin"%>
<%end%>



